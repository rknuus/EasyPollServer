<div id="page">
  <% if flash[:alert] %>
    <p class="flash-error"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>
  <%= yield %>
</div>

<table border="0" cellpadding="0" cellspacing="0" width="1200px">
  <tr align="left" valign="top">
    <th width="600px">
      <h1>Published polls</h1>
    </th>
    <th width="600px">
      <h1>Active polls</h1>
    </th>
  </tr>
  <tr align="left" valign="top">
    <td>
	  <%= render 'published_polls' %>
	</td>
    <td>
      <%= render 'my_polls' %>
    </td>
  </tr>
</table>
