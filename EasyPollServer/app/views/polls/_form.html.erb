<%= form_for(@poll) do |f| %>
  <% if @poll.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:</h2>

      <ul>
      <% @poll.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
	  <%= f.label "Poll title" %><br />
	  <%= f.text_field :title %>
	</div>
	<div class="field">
	  <%= f.label "Poll category" %><br />
	  <%= f.select :category, Poll::CATEGORIES, :prompt => 'Select a category' %>
	</div>

	<h2>Question list</h2>
	<% @question_index = 0 %>
	<%= f.fields_for :questions, @question_list do |builder| %>
		<% @question_index += 1 %>
		<%= render 'question_fields', :f => builder %>
	<% end %>

	<h2>New question</h2>
	<%= f.fields_for :questions, @question do |builder| %>
		<% @question_index += 1 %>
		<%= render 'question_fields', :f => builder %>
	<% end %>
	<div class="actions">
	  <%= f.submit 'Add question', :name => 'new_question_button' %>
	</div>

	<div class="actions">
	  <%= f.submit 'Cancel', :name => 'cancel_button' %>
	  <%= f.submit 'Publish' %>
	</div>
<% end %>
